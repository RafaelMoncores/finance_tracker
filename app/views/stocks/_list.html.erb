<div class="row mt-5">
    <div class="col-9">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                <th scope="col">Ticker</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <% if local_assigns[:show_actions] != false %>
                  <th scope="col">Actions</th>
                <% end %>
                </tr>
            </thead>
            <tbody>
                <% @user_stocks.each do |user_stock| %>
                    <tr>
                        <th scope="row"><%= user_stock.stock.ticker %></th>
                        <td><%= user_stock.stock.name %></td>
                        <td><%= number_to_currency(user_stock.stock.last_price) %></td>
                        <% if local_assigns[:show_actions] != false %>
                          <td>
                              <%= button_to "Remove", user_stock_path(user_stock),
                                            method: :delete,
                                            data: { confirm: "Are you sure?" },
                                            class: "btn btn-sm btn-warning" %>
                          </td>
                        <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>