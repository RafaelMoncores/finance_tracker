<div class="row mt-5">
    <div class="col-9">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                <th scope="col">Email</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <% if local_assigns[:show_actions] != false %>
                  <th scope="col">Actions</th>
                <% end %>
                </tr>
            </thead>
            <tbody>
                <% @friendships.each do |friendship| %>
                    <tr>
                        <th scope="row"><%= friendship.friend.email %></th>
                        <td><%= friendship.friend.first_name %></td>
                        <td><%= friendship.friend.last_name %></td>
                        <% if local_assigns[:show_actions] != false %>
                          <td>
                              <%= link_to "View Profile", user_path(friendship.friend), class: "btn btn-success btn-sm mr-2" %>
                              <%= button_to "Stop Following", friendship_path(friendship),
                                            method: :delete,
                                            data: { confirm: "Are you sure?" },
                                            form: { class: "d-inline" },
                                            class: "btn btn-sm btn-warning" %>
                          </td>
                        <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>